This is index.js
// From here 
import { questions } from "../data/dataset.js";

const app = document.querySelector(".app");
const catBtns = document.querySelectorAll(".cat-btn");
const categoriesClass = document.getElementsByClassName("categories");
let selectedCategory;
catBtns.forEach((catBtn) => {
  catBtn.addEventListener("click", () => {
    selectedCategory = catBtn.textContent;
    categoriesClass.classList.remove("hide");
    app.classList.add("hide");
  });
});
console.log(selectedCategory);

// Till here


